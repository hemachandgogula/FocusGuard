{
  "manifest_version": 3,
  "name": "FocusGuard",
  "version": "1.0.0",
  "description": "AI-powered content filtering Chrome extension that helps users stay focused by blocking distracting content.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/dom-scanner.js",
        "lib/filter-engine.js",
        "lib/keyword-fallback.js",
        "lib/onnx-runtime-web.min.js",
        "contentScript.js"
      ],
      "css": ["styles/content-filters.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "FocusGuard",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/onnx-runtime-web.min.js", "models/*"],
      "matches": ["<all_urls>"]
    }
  ]
}